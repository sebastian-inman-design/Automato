{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./source",
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [ "source/*" ],
      "@npm/*": [ "node_modules/*" ]
    },
    "lib": [
      "ES2017",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ]
  },
  "exclude": [
    "node_modules",
    "source/public"
  ]
}
