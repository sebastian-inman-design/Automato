{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./source",
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "webpack-env"
    ],
    "lib": [
      "ES2017",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ]
  },
  "includes": [
    "source/index.ts",
    "source/paths.ts",
    "source/preload.ts"
  ],
  "exclude": [
    "node_modules",
    "source/lib",
    "source/renderer"
  ]
}
